
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="mt-3">New Slide</h2>
            <hr>
            <form action="/admin/slideManager/new-slide" method="POST" enctype="multipart/form-data">
                <div>
                    <input type="hidden" name="_csrf" id="_csrf" value="{{_csrf}}">
                </div>
                <div>
                    <label for="title" class="form-title">Title</label>
                    <input type="text" name="title" id="title" class="form-control" value="{{title}}"/>
                </div>
                <div>
                    <label for="hyperlink" class="form-title">HyperLink</label>
                    <input type="text" name="hyperlink" id="hyperlink" class="form-control" value="{{hyperlink}}"/>
                </div>
                <div class="mt-3">
                    <label for="imgUrl" class="form-title">Image</label>
                    <input type="file" name="imgUrl" id="imgUrl">
                </div>
                <div class="mt-2">
                    <input type="checkbox" name="shown" id="shown" {{show}}>
                    <label for="show" class="form-title">Show</label>
                </div>
                <div class="mt-2">
                    <input type="submit" value="Add" class="btn btn-success"/>
                </div>
            </form>
        </div>
    </div>
</div>