
<div class="container-fluid">
    <div class="row">
        <div class="col-12 mt-3">
            <h2>Slide Manager</h2>
            <hr>
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Hyperlink</th>
                        <th>Shown</th>
                        <th>Controls</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each slides}}
                        <tr>
                            <td>{{title}}</td>
                            <td>{{hyperlink}}</td>
                            <td>
                                {{#if shown}}
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-check2" fill="green" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z"/>
                                    </svg>
                                {{else}}
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-x" fill="red" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                    </svg>
                                {{/if}}
                            </td>
                            <td>
                                <a href="/admin/slideManager/edit-slide/{{_id}}" class="btn btn-warning btn-sm">Modify</a>
                                <a href="#" class="btn btn-danger btn-sm">Remove</a>
                            </td>
                        </tr>
                    {{/each}}                    
                </tbody>
            </table>
            <a href="/admin/slideManager/new-slide" class="btn btn-success">New Slide</a>
        </div>
    </div>
</div>