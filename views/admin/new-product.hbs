<div class="container margin-top-nav">
    <div class="row">
        <div class="col-12 col-sm-6">
            <h2>New Product</h2>
            <form method="POST" enctype="application/x-www-form-urlencoded">
                <div>
                    <input type="hidden" name="_csrf" id="_csrf" value="{{_csrf}}">
                </div>
                <div>
                    <label for="title" class="form-title">Title</label>
                    <input type="text" name="title" id="title" class="form-control"/>
                </div>
                <div>
                    <label for="description" class="form-title">Description</label>
                    <input type="text" name="description" id="description" class="form-control"/>
                </div>
                <div>
                    <label for="price" class="form-title">Price</label>
                    <input type="text" name="price" id="price" class="form-control"/>
                </div>
                <div class="mt-2">
                    <input type="checkbox" name="show" id="show" checked>
                    <label for="show" class="form-title">Show</label>
                </div>
                <div class="mt-2">
                    <input type="submit" value="Add" class="btn btn-success"/>
                </div>
            </form>
        </div>
    </div>
</div>