<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb" style="margin-top: 20px;">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
                    <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">New Product</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="container margin-top-nav">
    <div class="row">
        <div class="col-12 col-sm-6">
            <h2>New Product</h2>
            {{#if errMessages}}
                <ul>
                    {{#each errMessages}}
                        <li class="text-danger">{{msg}}</li>
                    {{/each}}
                </ul>
            {{/if}}
            <form method="POST" enctype="multipart/form-data" novalidate>
                <div>
                    <input type="hidden" name="_csrf" id="_csrf" value="{{_csrf}}">
                </div>
                <div>
                    <label for="title" class="form-title">Title</label>
                    <input type="text" name="title" id="title" class="form-control" value="{{title}}"/>
                </div>
                <div>
                    <label for="description" class="form-title">Description</label>
                    <input type="text" name="description" id="description" class="form-control" value="{{description}}"/>
                </div>
                <div class="mt-3">
                    <label for="imageUrl" class="form-title">Image</label>
                    <input type="file" name="imageUrl" id="imageUrl">
                </div>
                <div>
                    <label for="price" class="form-title">Price</label>
                    <input type="text" name="price" id="price" class="form-control" value="{{price}}"/>
                </div>
                <div class="mt-2">
                    <input type="checkbox" name="show" id="show" {{show}}>
                    <label for="show" class="form-title">Show</label>
                </div>
                <div class="mt-2">
                    <input type="submit" value="Add" class="btn btn-success"/>
                </div>
            </form>
        </div>
    </div>
</div>