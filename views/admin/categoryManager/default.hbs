
<div class="container-fluid ">
    <div class="row">
        <div class="col-12">
            <h2 class="mt-3">Categories</h2>
            <hr>
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <td>Options</td>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                        <tr>
                            <td>{{title}}</td>
                            <td>
                                <a href="#" class="btn btn-warning btn-sm">Modify</a>
                                <a href="#" class="btn btn-danger btn-sm">Delete Category</a>
                            </td>
                        </tr>
                    {{/each}}                    
                </tbody>
            </table>
            <a class="btn btn-success" href="/admin/categoryManager/new-category">New Category</a>
        </div>
    </div>
</div>