
<div class="container-fluid ">
    <div class="row">
        <div class="col-12">
            <h2 class="mt-3">{{pageTitle}}</h2>
            <hr>
            <table class="table">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Controls</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                        <tr>
                            <td>{{email}}</td>
                            <td>{{name}}</td>
                            <td>{{surname}}</td>
                            <td>
                                <a href="#" class="btn btn-primary btn-sm">Change Password</a>
                                <a href="#" class="btn btn-warning btn-sm">Modify</a>
                                <a href="#" class="btn btn-danger btn-sm">Block User</a>
                            </td>
                        </tr>
                    {{/each}}                    
                </tbody>
            </table>
        </div>
    </div>
</div>