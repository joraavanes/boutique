<div class="container">
    <div class="row">
        <div class="col">
            
            <h2 class="margin-top-nav">Reset password</h2>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col offset-sm-1 col-sm-10 offset-md-3 col-md-6">
            
            {{#if errmsg}}            
                <p class="alert alert-danger">{{errmsg}}</p>
            {{/if}}

            {{#if formmsg}}
                <p class="alert alert-info">{{formmsg}}</p>
            {{/if}}

            <form action="/user/resetpassword" method="POST">

                <input type="hidden" name="_csrf" id="_csrf" value="{{_csrf}}">

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" name="email" id="email" class="form-control col-sm-8" autofocus>
                </div>
                <div class="form-group">
                    <input type="submit" value="Send Email reset link" class="btn btn-success mt-3">
                </div>
            </form>
        </div>
    </div>
</div>